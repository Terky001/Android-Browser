<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <gradient android:angle="90"
                android:startColor="@color/color_gradient_start"
                android:centerColor="@color/color_gradient_center"
                android:endColor="@color/color_gradient_start"/>
            <stroke android:color="@color/color_bg_stroke"
                android:width="2dp"/>
            <size android:width="20dp"
                android:height="20dp"/>
            <padding android:bottom="2dp"
                android:top="2dp"
                android:left="2dp"
                android:right="2dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <solid android:color="@color/color_bg_pressed"/>
            <stroke android:color="@color/color_bg_pressed"
                android:width="2dp"/>
            <size android:width="20dp"
                android:height="20dp"/>
            <padding android:bottom="2dp"
                android:top="2dp"
                android:left="2dp"
                android:right="2dp"/>
        </shape>
    </item>
</selector>